<div class="message-box">
  <div class="name-time">
    <p class="posted-by">
      <%= message.user.name %>
    </p>
    <p class="posted-at">
      <%= l message.created_at %>
    </p>
  </div>
  <p class="message">
    <%= message.content %>
  </p>
  <%= image_tag message.image.variant(resize:'500x500'), class: 'message-image' if message.image.attached? %>
</div>