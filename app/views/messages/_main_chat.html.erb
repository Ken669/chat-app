<div class="main">
  <div class="main-header">
    <p class="current-room">
      <%= @room.name %>
    </p>
    <div class="destroy-btn">
      <%= link_to 'destroy', room_path(@room), method: :delete %>
    </div>
  </div>
  
  <div class="main-body">
    <%= render partial: 'message', collection: @messages %>
  </div>

  <div class="main-bottom">
    <%# <div class="form">
      <input type="text" placeholder="type a message" class="input-text">
      <label class="image">
        <span class="image-file">pic</span>
        <input type="file" class="hidden">
      </label>
    </div>
    <input type="submit" value="send" class="send-btn"> %>

    <%= form_with model: [@room, @message], html: {class: "form"}, local: true do |f| %>
      <div class="form-input">
        <%= f.text_field :content, class: 'input-text', placeholder: "type a message" %>
        <label class="image">
          <span class="image-file">pic</span>
          <%= f.file_field :image, class: 'hidden' %>
        </label>
      </div>
      <%= f.submit 'send', class: 'send-btn' %>
    <% end %>
  </div>
</div>